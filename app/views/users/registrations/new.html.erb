<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">

      <h2>Je m'inscris</h2>


      <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <div class="form-inputs">
          <%= f.email_field :email, label: "Mon email", required: false, autofocus: true %>
          <%= f.password_field :password, label: "Mon mot de passe", autocomplete: "off", hint: ("#{@minimum_password_length} characters minimum" if @validatable) %>
          <%= f.password_field :password_confirmation, label: "Je confirme mon mot de passe", autocomplete: "off" %>

          <p> Je m'inscris en tant que : </p>
          <%= f.radio_button :profileable_type, 'Customer', label: "Client" %>
          <%= f.radio_button :profileable_type, 'Bricooler', label: "Bricooler" %>
          <% f.hidden_field :profileable_id %>
        </div>

        <div class="form-actions">
        <br />
          <%= f.submit "OK", class: "brand-btn" %>
        </div>
      <% end %>
    </div>

    <div class="col-sm-4 col-sm-offset-4">
    <br />
      <div class="fb-connect">
        <%= link_to(user_omniauth_authorize_path(:facebook), class: "fb-btn") do %>
          Connexion <i class="fa fa-facebook"></i>
        <% end %>
      </div>
    <br />
    </div>

    <div class="col-sm-4 col-sm-offset-4">
      <div class="link">
        <i class="fa fa-hand-o-right"></i><%= link_to " Je suis déjà inscrit.", new_user_session_path %>
      </div>
    </div>

  </div> <!-- ferme la row -->
</div> <!-- ferme le container  -->

