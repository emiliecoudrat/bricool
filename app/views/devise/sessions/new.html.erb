<div class="container">

  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <br />
      <h2>Je me connecte</h2>
      <br />
      <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.email_field :email, label: "Mon email", required: false, autofocus: true %>
          <%= f.password_field :password, label: "Mon mot de passe", autocomplete: "off", hint: ("#{@minimum_password_length} characters minimum" if @validatable) %>
          <%= f.check_box :remember_me, label: "Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
        <br />
        </div>

        <div class="form-actions">
          <%= f.submit "OK", class: "brand-btn" %>
        </div>
      <% end %>
    </div>

  <div class="col-sm-4 col-sm-offset-4">
  <br />
    <div class="fb-connect">
      <%= link_to(user_omniauth_authorize_path(:facebook), class: "fb-btn") do %>
        Connexion <i class="fa fa-facebook"></i>
      <% end %>
    </div>
  </div>

  <div class="col-sm-4 col-sm-offset-4">
  <br />
    <div class="forgot-pwd">
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Oups, j'ai oubliÃ© mon mot de passe.", new_password_path(resource_name) %><br />
      <% end -%>
    </div>
  </div>

 </div> <!-- ferme la row -->

</div> <!-- ferme le container -->






