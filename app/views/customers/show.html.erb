<h1 class="text-center">Mon profil</h1>
<br>
<br>
<div class="container text-align">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <p><strong>Prénom:</strong> <%= @customer.user.first_name %></p>
      <br>
      <p><strong>Nom:</strong> <%= @customer.user.last_name %></p>
      <br>
      <p><strong>Email:</strong> <%= @customer.user.email %></p>
      <br>
      <br>
      <%= link_to(edit_customer_path, class: "btn btn-primary") do %>
        <i class="fa fa-pencil"> Compléter ou mettre à jour mon profil</i>
      <% end %>
      <div class="horizontal_minispacer"></div>
    </div>

    <div class="col-xs-8 col-xs-offset-2">
      <h2 class="text-center">Mes commandes en cours</h2>
        <br>
       <%= link_to(class: "btn btn-primary") do %>
        <i class="fa fa-pencil"> Mes travaux passés</i>
      <% end %>
    </div>
  </div>
      <div class="horizontal_spacer"></div>
      <div class="horizontal_spacer"></div>
</div>