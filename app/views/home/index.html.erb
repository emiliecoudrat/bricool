<div class= "container bricool-home">
  <div class= "row">

  <div class= "col-xs-10 col-xs-offset-1">

    <div class= "bricool-ovals">
      <div class= "col-xs-4">
        <%= image_tag 'oval1.png', width:'60px'%>
        <h6>Je choisis mes travaux</h6>
        <h6>et mon bricooleur</h6>
      </div>

      <div class= "col-xs-4">
        <%= image_tag 'oval2.png', width:'60px'%>
        <h6>Je paie en ligne</h6>
      </div>

      <div class= "col-xs-4">
        <%= image_tag 'oval3.png', width:'60px'%>
        <h6>Je note</h6>
      </div>
    </div>

    <div class= "bricool-search">
      <div class= "col-xs-12">
        <h4>Dites-nous ce dont vous avez besoin</h4>
        <%= image_tag 'search-img.png', width:'60%'%>
      </div>
    </div>

    <div class= "bricool-argus">
      <div class= "col-xs-4">
        <%= image_tag 'euro.png', width:'45px'%>
        <h6>Des prix fixes</h6>
        <h6>et un paiement sécurisé</h6>
      </div>

      <div class= "col-xs-4">
        <%= image_tag 'muscle.png', width:'50px'%>
        <h6>Des personnes de confiance</h6>
        <h6>triées sur le volet par nos soins</h6>
      </div>

      <div class= "col-xs-4">
        <%= image_tag 'stars.png', width:'50px'%>
        <h6>La garantie</h6>
        <h6>satisfait ou remboursé</h6>
      </div>
    </div>

    <div class= "petits-travaux">
      <div class= "col-xs-12">
        <h4>Nos petits travaux</h4>

        <div class= "col-xs-4">
          <%= link_to() do %>
            <%= image_tag 'detecteur.png', width: '70px' %>
            <h6>Pose de détecteur de fumée</h6>
          <% end %>
        </div>

        <div class= "col-xs-4">
          <%= link_to() do %>
            <%= image_tag 'bricolage.png', width: '60px' %>
            <h6>Bricolage à l'heure</h6>
          <% end %>
        </div>

        <div class= "col-xs-4">
          <%= link_to() do %>
            <%= image_tag 'meuble.png', width: '60px' %>
            <h6>Montage de meubles</h6>
          <% end %>
        </div>

      </div>

      <div class= "col-xs-12">
        <div class= "col-xs-4">
          <%= link_to() do %>
            <%= image_tag 'cadre.png', width: '60px' %>
            <h6>Pose et fixation murale</h6>
          <% end %>
        </div>

        <div class= "col-xs-4">
          <%= link_to() do %>
            <%= image_tag 'joints.png', width: '60px' %>
            <h6>Pose de joints</h6>
          <% end %>
        </div>

        <div class= "col-xs-4">
          <%= link_to() do %>
            <%= image_tag 'prise.png', width: '35px' %>
            <h6>Electricité</h6>
          <% end %>
        </div>
      </div>

      <div class= "col-xs-12">
        <div class= "col-xs-4">
          <%= link_to() do %>
            <%= image_tag 'robinet.png', width: '60px' %>
            <h6>Plomberie</h6>
          <% end %>
        </div>

        <div class= "col-xs-4">
          <%= link_to() do %>
            <%= image_tag 'douche.png', width: '65px' %>
            <h6>Pose d'éléments de salle de bain</h6>
          <% end %>
        </div>

        <div class= "col-xs-4">
          <%= link_to() do %>
            <%= image_tag 'interrogation.png', width: '35%' %>
            <h6>Pour toute autre prestation, nous réalisons un devis sur-mesure</h6>
          <% end %>
        </div>
      </div>

    </div> <!-- ferme petits-travaux -->

    </div>

  </div> <!-- ferme la row -->
</div> <!-- ferme le container -->
