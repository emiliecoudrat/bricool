<div class="container">

<%= bootstrap_form_for (new_customer_estimate_path) do |f| %>
  <p>
    <%= f.text_field :title %>
    <%= f.text_area :description %>
    <%= f.label :picture %>
    <%= f.file_field :picture %>
    <% f.hidden_field :customer_id %>
    <% f.hidden_field :id %>
  </p>
  <p><%= f.submit "valider" %></p>

<% end %>

</div>